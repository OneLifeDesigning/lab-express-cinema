  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-md-4 text-right">
        <img src="{{ movie.image }}" alt="{{ movie.title }}" class="img-fluid mb-2">
      </div>
      <div class="col-12 col-md-8 text-left">
        <a class="btn btn-link mb-4" href="/movies">Go back</a>
        <h1 class="mb-0">{{ movie.title }}</h1>
        <h2 class="mb-0">Director {{ movie.director }}</h2>
        <h5>Stars</h5>
        <ul>
          {{#each movie.stars as |star|}}
          <li>{{ star }}</li>
          {{/each}}
        </ul>
        <p>{{ movie.description }}</p>
        <h5>Showtimes</h5>
        {{#each movie.showtimes as |showtime|}}
        <span class="badge badge-light">{{ showtime }}</span>
        {{/each}}
      </div>
    </div>
  </div>